<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.notesFragments.NotesFragmentEditMode">

    <EditText android:id="@+id/edit_title"
              android:layout_width="350dp" android:layout_height="50dp"
              android:layout_marginTop="20dp"
              android:textColor="@color/black"
              android:layout_centerHorizontal="true"
              android:imeOptions="actionDone"
              android:maxLines="1"/>


    <EditText android:id="@+id/edit_body"
              android:layout_width="350dp" android:layout_height="wrap_content"
              android:layout_below="@id/edit_title"
              android:layout_marginTop="30dp"
              android:scrollHorizontally="true"
              android:padding="10dp"
              android:layout_centerHorizontal="true"
              android:inputType="textMultiLine"
              android:maxLines="30"
              android:minLines="1"
              android:imeOptions="actionDone"
              android:textColor="@color/black"/>

</RelativeLayout>