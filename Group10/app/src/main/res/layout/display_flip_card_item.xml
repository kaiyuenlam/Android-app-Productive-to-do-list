<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:id="@+id/frontCardView"
                                       app:cardCornerRadius="20dp"
                                       android:layout_marginTop="3dp"
                                       android:outlineSpotShadowColor="@color/white"
                                       android:layout_marginBottom="0dp"
                                       app:cardUseCompatPadding="true"
                                       android:layout_marginHorizontal="12dp"
                                       app:cardBackgroundColor="#F1F5F6">

        <TextView android:id="@+id/textView_front"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textColor="@color/black"
                  android:text="It is a sample "
                  android:textSize="25sp"
                  android:layout_margin="10dp"
        />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:id="@+id/backCardView"
                                       android:alpha="0"
                                       android:outlineSpotShadowColor="@color/white"
                                       app:cardUseCompatPadding="true"
                                       android:layout_marginBottom="0dp"
                                       app:cardCornerRadius="20dp"
                                       android:layout_marginTop="3dp"
                                       android:layout_marginHorizontal="10dp"
                                       app:cardBackgroundColor="#D4EEF4">

        <TextView android:id="@+id/textView_back"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textColor="@color/black"
                  android:text="It is a sample sss"
                  android:textSize="25sp"
                  android:layout_margin="10dp"
        />
    </androidx.cardview.widget.CardView>



</RelativeLayout>